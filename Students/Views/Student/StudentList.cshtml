@{
}

@model List<Student>

<div class="row">
    <div class="col">
        <h1>List Of Student</h1>
    </div>
    <div class="col text-end">
        <a class="btn btn-primary" asp-controller="Student" asp-action="EditStudent">Create</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Major</th>
            <th>GPA</th>
            <th>ContactInfo</th>
            <th>Modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>@s.Major</td>
                <td>@s.GPA</td>
                <td>@s.ContactInfo</td>
                <td>@s.ModifiedDate.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <form method="post" asp-controller="Student" asp-action="RemoveStudent" asp-route-id="@s.Id">
                    <a class="btn btn-primary" asp-controller="Student" asp-action="EditStudent" asp-route-id="@s.Id">Edit</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>